@startuml

[*] --> ЗапускПрограммы : Программа запущена

state ЗапускПрограммы {
    [*] --> ГлавноеМеню : Переход в главное меню
}

state ГлавноеМеню {
    [*] --> СозданиеКлиента : Выбор "Создать клиента"
    [*] --> СозданиеПовара : Выбор "Создать повара"
    [*] --> СозданиеКурьера : Выбор "Создать курьера"
    [*] --> ПринятиеЗаказа : Выбор "Сделать заказ"
    [*] --> ПриготовлениеПиццы : Выбор "Приготовить пиццу"
    [*] --> ДоставкаЗаказа : Выбор "Доставить заказ"
    [*] --> ПоказатьФинансы : Выбор "Показать финансы"
    [*] --> ЗавершениеПрограммы : Выбор "Выход"
}

state СозданиеКлиента {
    [*] --> ВводДанныхКлиента : Ввод имени, адреса и телефона
    ВводДанныхКлиента --> ГлавноеМеню : Клиент создан
}

state СозданиеПовара {
    [*] --> ВводДанныхПовара : Ввод имени повара
    ВводДанныхПовара --> ГлавноеМеню : Повар создан
}

state СозданиеКурьера {
    [*] --> ВводДанныхКурьера : Ввод имени и транспорта курьера
    ВводДанныхКурьера --> ГлавноеМеню : Курьер создан
}

state ПринятиеЗаказа {
    [*] --> ВыборКлиента : Выбор клиента из списка
    ВыборКлиента --> ВыборПицц : Выбор пицц из меню
    ВыборПицц --> СозданиеЗаказа : Заказ создан
    СозданиеЗаказа --> ГлавноеМеню : Заказ принят
}

state ПриготовлениеПиццы {
    [*] --> ВыборЗаказа : Выбор заказа для приготовления
    ВыборЗаказа --> Приготовление : Повар готовит пиццу
    Приготовление --> ГлавноеМеню : Пицца приготовлена
}

state ДоставкаЗаказа {
    [*] --> ВыборЗаказа : Выбор заказа для доставки
    ВыборЗаказа --> Доставка : Курьер доставляет заказ
    Доставка --> ГлавноеМеню : Заказ доставлен
}

state ПоказатьФинансы {
    [*] --> ОтображениеФинансов : Отображение текущей прибыли
    ОтображениеФинансов --> ГлавноеМеню : Финансы показаны
}

state ЗавершениеПрограммы {
    [*] --> СохранениеДанных : Сохранение данных перед выходом
    СохранениеДанных --> [*] : Программа завершена
}

ГлавноеМеню --> ЗавершениеПрограммы : Выбор "Выход"

@enduml